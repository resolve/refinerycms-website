<div id='records'>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
  <% end %>
  <% if @tutorials.any? %>
    <%= will_paginate @tutorials,
                       :previous_label => '&laquo;',
                       :next_label => '&raquo;' %>

    <%= render :partial => "sortable_list" %>

    <%= will_paginate @tutorials,
                       :previous_label => '&laquo;',
                       :next_label => '&raquo;' %>
  <% else %>
    <p>
      <% unless searching? %>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      <% else %>
        <%= t('shared.admin.search.no_results') %>
      <% end %>
    </p>
  <% end %>
</div>
<div id='actions'>
  <ul>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_tutorials_url
                  } %>
    </li>
    <li>
      <%= link_to t('.create_new'), new_admin_tutorial_url,
                   :class => "add_icon" %>
    </li>
  <% if !searching? and Tutorial.count > 1 %>
    <li>
      <%= link_to t('.reorder', :what => "Tutorials"),
                   admin_tutorials_url,
                   :id => "reorder_action",
                   :class => "reorder_icon" %>

      <%= link_to t('.reorder_done', :what => "Tutorials"),
                   admin_tutorials_url,
                   :id => "reorder_action_done",
                   :style => "display: none;",
                   :class => "reorder_icon" %>
    </li>
  <% end %>
  </ul>
</div>
<%= render :partial => "/shared/admin/make_sortable",
            :locals => {
              :tree => false
            } if !searching? and Tutorial.count > 1 %>
