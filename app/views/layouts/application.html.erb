<!DOCTYPE html>
<%= render :partial => "/shared/html_tag" %>
  <% content_for :meta do %>
    <script>var _sf_startpt=(new Date()).getTime();</script>
  <% end %>
  <% content_for :stylesheets do %>
    <%= stylesheet_link_tag('blog') if is_blog? %>

    <% if is_guides? %>
      <%= stylesheet_link_tag 'style' %>
      <%= stylesheet_link_tag 'print', :media => "print" %>
      <%# stylesheet_link_tag 'syntaxhighlighter/shCore.css' %>
      <%# stylesheet_link_tag 'syntaxhighlighter/shThemeRailsGuides.css' %>
    <% end %>
  <% end %>
  <%= render :partial => "/shared/head" %>
  <body>
    <%= render :partial => "/shared/site_bar" %>
    <%= render :partial => "/shared/ie6check" if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
    <div id="page_container">
      <header>
        <%= render :partial => "/shared/header" -%>
      </header>
      <section id='page'>
        <%= yield %>
      </section>
      <footer>
        <%= render :partial => "/shared/footer" -%>
      </footer>
    </div>
    <% content_for :javascript_libraries do %>
      <%= jquery_include_tags(:jquery_ui => false) %>
      <%= javascript_include_tag('jquery/jquery.corner.js') %>
    <% end %>
    <% content_for :javascripts do %>
      <%= javascript_include_tag('application') %>
      <%= javascript_include_tag('guides') if is_guides? %>
    <% end %>
    <%= render :partial => "/shared/javascripts" %>
    <%= render :partial => "/shared/chartbeat"%>
  </body>
</html>
