<section id='body_content'>
  <h1><%= page_title %></h1>
  <% unless @page.content_for(:side_body).blank? %>
    <section id='body_content_left'>
      <%=raw @page.content_for(:body) %>
    </section>
    <section id='body_content_right'>
      <%=raw @page.content_for(:side_body) %>
    </section>
  <% else %>
    <section id='content'>
      <%=raw @page.content_for(:body) %>
    </section>
  <% end %>
</section>
