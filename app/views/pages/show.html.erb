<section id='body_content'>
  <h1><%= page_title %></h1>
  <% unless @page[:side_body].blank? %>
    <section id='body_content_left'>
      <%=raw @page[:body] %>
    </section>
    <section id='body_content_right'>
      <%=raw @page[:side_body] %>
    </section>
  <% else %>
    <section id='content'>
      <%=raw @page[:body] %>
    </section>
  <% end %>
</section>
